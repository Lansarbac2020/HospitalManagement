@model List<Department>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Departments - Pediatric Department</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Departments List</h1>

        <div class="mb-4">
            <a asp-controller="Department" asp-action="CreateDepartmant" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Department
            </a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Department Name</th>
                    <th scope="col">Patient Count</th>
                    <th scope="col">Available Beds</th>
                    <th scope="col">Department Head</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var department in Model)
                    {
                        <tr>
                            <th scope="row">@department.DepartmentId</th>
                            <td>@department.DepartmentName</td>
                            <td>@department.PatientCount</td>
                            <td>@department.AvailableBeds</td>
                            <td>@department.FacultyMember?.FirstName @department.FacultyMember?.LastName</td>
                            <td>
                                <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-controller="Department" asp-action="DeleteDepartment" asp-route-id="@department.DepartmentId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No departments found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
