@model Department
@{
    var alertMessage = ViewData["AlertMessage"] as string;
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Department</h2>
            <hr />

            <!-- Display the alert message if available -->
            @if (!string.IsNullOrEmpty(alertMessage))
            {
                <div class="alert alert-danger">
                    @alertMessage
                </div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DepartmentName" class="form-label"></label>
            <input asp-for="DepartmentName" type="text" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="PatientCount" class="form-label"></label>
            <input asp-for="PatientCount" type="number" class="form-control" />
            <span asp-validation-for="PatientCount" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="AvailableBeds" class="form-label"></label>
            <input asp-for="AvailableBeds" type="number" class="form-control" />
            <span asp-validation-for="AvailableBeds" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="FacultyMemberId" class="form-label">Department Head</label>

            @if (ViewBag.FacultyMembers == null || !((IEnumerable<SelectListItem>)ViewBag.FacultyMembers).Any())
            {
                <div class="alert alert-danger">
                    Faculty members list is not available. Please check the data source.
                </div>
            }
            else
            {
                <select asp-for="FacultyMemberId" class="form-control" asp-items="@(new SelectList(ViewBag.FacultyMembers, "Value", "Text", Model?.FacultyMemberId))">
                    <option value="">Select a department head</option>
                </select>
            }

            <span asp-validation-for="FacultyMemberId" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Department" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
