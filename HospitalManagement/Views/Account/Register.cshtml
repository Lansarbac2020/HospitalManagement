@model RegisterViewModel

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-[400px] bg-white p-4 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Create an Account</h2>

        <!-- Form Starts -->
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-sm text-red-500 mb-4"></div>

            <!-- Email Field -->
            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" asp-for="Email" class="mt-1 block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" asp-for="Password" class="mt-1 block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-4">
                <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="mt-1 block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <!-- First Name Field -->
            <div class="mb-4">
                <label for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                <input type="text" asp-for="FirstName" class="mt-1 block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
            </div>

            <!-- Last Name Field -->
            <div class="mb-6">
                <label for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                <input type="text" asp-for="LastName" class="mt-1 block w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center">
                <button type="submit" class="w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Register
                </button>
            </div>
        </form>

        <!-- Login Link -->
        <div class="mt-4 text-center">
            <p class="text-sm text-gray-600">Already have an account? <a href="/Account/Login" class="text-blue-600 hover:text-blue-800">Login here</a></p>
        </div>
    </div>
</div>
