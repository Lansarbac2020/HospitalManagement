@model HospitalManagement.Models.Appointment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Create Appointment - Hospital Management</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto mt-10 px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Create New Appointment</h1>

        <!-- Form Container -->
        <div class="bg-white shadow-lg rounded-lg p-8 mb-6">
            <!-- Form Start -->
            <form asp-controller="Appointments" asp-action="CreateAppointment" method="post" class="space-y-6">

                <!-- Assistant Selection -->
                <div>
                    <label for="AssistantId" class="block text-gray-700 font-semibold mb-2">Assistant</label>
                    <select asp-for="AssistantId" asp-items="ViewBag.Assistants" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Select Assistant --</option>
                    </select>
                    <span asp-validation-for="AssistantId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Faculty Member Selection -->
                <div>
                    <label for="FacultyMemberId" class="block text-gray-700 font-semibold mb-2">Faculty Member</label>
                    <select asp-for="FacultyMemberId" asp-items="ViewBag.FacultyMembers" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Select Faculty Member --</option>
                    </select>
                    <span asp-validation-for="FacultyMemberId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Appointment Date -->
                <div>
                    <label for="AppointmentDate" class="block text-gray-700 font-semibold mb-2">Appointment Date</label>
                    <input asp-for="AppointmentDate" type="date" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="AppointmentDate" class="text-red-500 text-sm"></span>
                </div>

                <!-- Description -->
                <div>
                    <label for="Description" class="block text-gray-700 font-semibold mb-2">Description</label>
                    <textarea asp-for="Description" rows="4" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <!-- Status -->
                <div>
                    <label for="Status" class="block text-gray-700 font-semibold mb-2">Status</label>
                    <select asp-for="Status" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                </div>

                <!-- Duration -->
                <div>
                    <label for="Days" class="block text-gray-700 font-semibold mb-2">Days</label>
                    <input asp-for="Days" type="date" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Days" class="text-red-500 text-sm"></span>
                </div>

                <!-- Shift Start Time -->
                <div>
                    <label for="ShiftStartTime" class="block text-gray-700 font-semibold mb-2">Shift Start Time</label>
                    <input asp-for="ShiftStartTime" type="time" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ShiftStartTime" class="text-red-500 text-sm"></span>
                </div>

                <!-- Shift End Time -->
                <div>
                    <label for="ShiftEndTime" class="block text-gray-700 font-semibold mb-2">Shift End Time</label>
                    <input asp-for="ShiftEndTime" type="time" class="block w-full border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ShiftEndTime" class="text-red-500 text-sm"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">
                        Create Appointment
                    </button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
