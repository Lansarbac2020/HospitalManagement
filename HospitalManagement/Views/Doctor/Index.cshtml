@model IEnumerable<HospitalManagement.Models.Doctor>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Doctors - Hospital Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Doctors List</h1>

        <div class="mb-4">
            <a asp-action="CreateDoctor" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Doctor
            </a>
        </div>

        <table class="table table-striped table-hover">
            <thead class="">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Department Head</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.FirstName @doctor.LastName</td>
                            <td>@doctor.Email</td>
                            <td>@doctor.Phone</td>
                            <td>@doctor.DepartmentHead?.FirstName @doctor.DepartmentHead?.LastName</td>
                            <td>
                                <a asp-action="EditDoctor" asp-route-id="@doctor.DoctorId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="DeleteDoctor" asp-route-id="@doctor.DoctorId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No doctors found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
