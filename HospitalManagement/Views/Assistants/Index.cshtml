@model List<Assistant>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Assistants - Pediatric Department</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-10 px-4">
        <h1 class="text-3xl font-bold text-center mb-5">Assistants List</h1>

        <div class="mb-4 text-right">
            <a asp-controller="Assistants" asp-action="CreateAssistant" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                <i class="bi bi-plus-circle"></i> Add New Assistant
            </a>
        </div>

        <!-- Table wrapper with scrollable feature -->
        <div class="overflow-auto border border-gray-300 rounded-lg bg-red-500 shadow-lg" style="max-height: 500px;">
            <table class="min-w-full bg-white">
                <thead class="sticky top-0 bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <tr>
                        <th scope="col" class="py-3 px-4 text-left">ID</th>
                        <th scope="col" class="py-3 px-4 text-left">First Name</th>
                        <th scope="col" class="py-3 px-4 text-left">Last Name</th>
                        <th scope="col" class="py-3 px-4 text-left">Email</th>
                        <th scope="col" class="py-3 px-4 text-left">Phone</th>
                        <th scope="col" class="py-3 px-4 text-left">Department</th>
                        <th scope="col" class="py-3 px-4 text-left">Shift Start</th>
                        <th scope="col" class="py-3 px-4 text-left">Shift End</th>
                        <th scope="col" class="py-3 px-4 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var assistant in Model)
                        {
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="py-3 px-4">@assistant.AssistantId</td>
                                <td class="py-3 px-4">@assistant.FirstName</td>
                                <td class="py-3 px-4">@assistant.LastName</td>
                                <td class="py-3 px-4">@assistant.Email</td>
                                <td class="py-3 px-4">@assistant.Phone</td>
                                <td class="py-3 px-4">@assistant.Department?.DepartmentName</td>
                                <td class="py-3 px-4">@assistant.ShiftStartTime.ToString("hh:mm tt")</td>
                                <td class="py-3 px-4">@assistant.ShiftEndTime.ToString("hh:mm tt")</td>
                                <td class="py-3 px-4">
                                    <a asp-controller="Assistants" asp-action="EditAssistant" asp-route-id="@assistant.AssistantId" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-2 rounded">Edit</a>
                                    <a asp-controller="Assistants" asp-action="Delete" asp-route-id="@assistant.AssistantId" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center py-3">No assistants found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

