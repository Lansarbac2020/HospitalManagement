@model IEnumerable<HospitalManagement.Models.BookedAppointment>

@{
    ViewData["Title"] = "Booked Appointments";
}

<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">

    <h2 class="text-3xl mt-10 font-semibold text-center text-gray-800 mb-6">Booked Appointments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Doctor Name</th>
            <th>Department Name</th>
            <th>Appointment Date</th>
            <th>Shift Start Time</th>
            <th>Shift End Time</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Appointment?.Doctor?.FirstName @item.Appointment?.Doctor?.LastName </td>
                <td>@item.Appointment?.Doctor.Department.DepartmentName </td>
                <td>@item.Appointment?.AppointmentDate.ToString("yyyy-MM-dd") </td>
                <td>@item.Appointment?.ShiftStartTime?.ToString("hh\\:mm") </td>
                <td>@item.Appointment?.ShiftEndTime?.ToString("hh\\:mm")</td>
                <td>@item.Description</td>
                    <td>
                        <a asp-controller="Booking" asp-action="Edit" asp-route-id="@item.BookedAppointmentId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Booking" asp-action="Delete" asp-route-id="@item.BookedAppointmentId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>