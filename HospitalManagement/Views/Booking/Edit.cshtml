@model HospitalManagement.Models.BookedAppointment

@{
    ViewData["Title"] = "Edit Booked Appointment";
}

<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">Edit Booked Appointment</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
