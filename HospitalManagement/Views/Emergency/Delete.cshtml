@model Emergency

@{
    ViewData["Title"] = "Delete Emergency";
}

<h2 class="my-3 text-center text-2xl font-bold text-gray-800">Are you sure you want to delete this emergency ?</h2>

<div class="emergency-card bg-white shadow-sm rounded p-4">
    <h5 class="text-xl font-semibold text-gray-800">@Model.Title</h5>
    <p class="text-gray-600">@Model.Description</p>
</div>

<form method="post">
    <button type="submit" class="mt-3 btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="mt-3 btn btn-secondary">Cancel</a>
</form>
